{
  "manifest_version": 3,
  "name": "TicketPlace - Exclu Auteuil",
  "version": "1.0",
  "description": "Vérifie l'accès à l'exclu Auteuil",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": [
    "https://billetterie.psg.fr/*"
  ]
}